generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  password_hash   String
  failed_attempts Int       @default(0)
  locked_until    DateTime?
  created_at      DateTime  @default(now())
}
model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String
  ip        String?
  timestamp DateTime @default(now())
}
